@{
    ViewData["Title"] = "User Summary Page";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}

@model PizzaStore.Client.Models.PizzaViewModel


<main>
  <table style="width: 100%">
    <tr>
      <th>Crusts</th>
      <th>Sizes</th>
      <th>Toppings</th>
      <th>User</th>
    </tr>
        <tr>
          <td>@Model.Crust</td>
          <td>@Model.Size</td>
          @for (var i = 0; i < @Model.SelectedToppings.Count(); i++)
          {
              <td>@Model.SelectedToppings[i].Name</td>
          }
          <td>@ViewBag.UserName</td>
        </tr>
  </table>
</main>