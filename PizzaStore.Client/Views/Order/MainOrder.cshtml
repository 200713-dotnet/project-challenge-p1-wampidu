@model PizzaStore.Client.Models.UserViewModel
@{
    ViewData["Title"] = "Main Order Page";
    Layout = "~/Views/Order/_LayoutOrder.cshtml";
}

@using(Html.BeginForm("Custom", "Order", null, FormMethod.Post))
{
  
  @Model.Name
  <input type="submit" value="@Model.Name">
  @Html.HiddenFor(m => m.Name)
  @ViewBag.UserName
  

}

@using(Html.BeginForm("Preset", "Order", null, FormMethod.Post))
{
  <input type="submit" value="Preset">
  @Html.HiddenFor(m => m.Name)
}